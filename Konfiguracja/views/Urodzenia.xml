<!--
$Nazwiska=Nazwisko;Ojciec.Nazwisko;Matka.Nazwisko;Chrzestni.*.Nazwisko;Udzielający chrztu.Nazwisko;Akuszerka.Nazwisko;Matka.Matka.Nazwisko;Matka.Ojciec.Nazwisko;Ojciec.Matka.Nazwisko;Ojciec.Ojciec.Nazwisko
$Imiona=Imiona.*;Chrzestni.*.Imię;Ojciec.Imiona.*;Udzielający chrztu.Imię;Matka.Imiona.*;Akuszerka.Imię;Ojciec.Ojciec.Imię;Ojciec.Matka.Imię;Matka.Ojciec.Imię;Matka.Matka.Imię
$Status=Ojciec.Status społeczny;Matka.Status społeczny;Chrzestni.*.Status społeczny;Ojciec.Ojciec.Status społeczny;Ojciec.Matka.Status społeczny;Matka.Ojciec.Status społeczny;Matka.Matka.Status społeczny
$Zawod=Ojciec.Zawód;Matka.Zawód;Chrzestni.*.Zawód;Ojciec.Ojciec.Zawód;Ojciec.Matka.Zawód;Matka.Ojciec.Zawód;Matka.Matka.Zawód
$Tytuly=Ojciec.Tytuł;Matka.Tytuł;Chrzestni.*.Tytuł
-->
<vbox>
  <label>Urodzenia</label>
  <hbox>
    <AutocompleteTextField path="Miejscowość" sticky="true"/>
    <ChoiceField path="Charakter miejscowości" sticky="true"/>
    <AutocompleteTextField path="PowiatCyrkuł" label="Powiat / Cyrkuł" sticky="true"/>
  </hbox>
  <hbox>
    <AutocompleteTextField path="Diecezja" sticky="true"/>
    <AutocompleteTextField path="Dekanat" sticky="true"/>
    <AutocompleteTextField path="Parafia" sticky="true"/>
  </hbox>
  <hbox>
    <vbox>
      <label>Dziecko</label>
      <table path="Imiona" paddingLeft="50">
        <AutocompleteTextColumn label="Imię" sources="{Imiona}"/>
      </table>
      <AutocompleteTextField path="Nazwisko" sources="{Nazwiska}"/>
      <ChoiceField path="Płeć"/>
      <YearDateField path="Data urodzenia"/>
      <YearDateField path="Data chrztu"/>
      <YearDateField path="Data śmierci"/>

      <TextField path="Numer domu"/>

      <ChoiceField path="Urodzenie ślubne" default="Tak"/>
      <ChoiceField path="Urodzenie żywe" default="Tak"/>
      <ChoiceField path="Zmarło zaraz po chrzcie" default="Tak"/>
      <ChoiceField path="Ciąża mnoga"/>
    </vbox>
    <enter field="Ojciec">
    <vbox>
      <label>Ojciec</label>
      <AutocompleteTextField path="Tytuł" sources="{Tytuly}" />
      <table path="Imiona" paddingLeft="70">
        <AutocompleteTextColumn label="Imię" sources="{Imiona}"/>
      </table>
      <AutocompleteTextField path="Nazwisko" sources="{Nazwiska}"/>
      <vbox>
        <IntegerField path="Wiek" width="50"/>
        <YearDateField path="Data urodzenia"/>
      </vbox>
      <AutocompleteTextField path="Status społeczny" sources="{Status}"/>
      <AutocompleteTextField path="Zawód" sources="{Zawod}"/>

      <hbox>
        <AutocompleteTextField label="Imię i nazwisko matki" path="Matka.Imię" sources="{Imiona}" width="100"/>
        <AutocompleteTextField label="" path="Matka.Nazwisko" sources="{Nazwiska}" width="100"/>
      </hbox>
      <AutocompleteTextField path="Rodzice matki" sources="{Imiona}"/>
      <AutocompleteTextField label="Status społeczny matki" path="Matka.Status społeczny" sources="{Status}" />
      <AutocompleteTextField label="Zawód matki" path="Matka.Zawód" sources="{Zawod}" />
      <hbox>
        <AutocompleteTextField label="Imię i nazwisko ojca" path="Ojciec.Imię" sources="{Imiona}" width="100" paddingLeft="7"/>
        <AutocompleteTextField label="" path="Ojciec.Nazwisko" sources="{Nazwiska}" width="100"/>
      </hbox>
      <AutocompleteTextField path="Rodzice ojca" sources="{Imiona}"/>
      <AutocompleteTextField label="Status społeczny ojca" path="Ojciec.Status społeczny" sources="{Status}" />
      <AutocompleteTextField label="Zawód ojca" path="Ojciec.Zawód" sources="{Zawod}" />
    </vbox>
    </enter>
    <enter field="Matka">
    <vbox>
      <label>Matka</label>
      <AutocompleteTextField path="Tytuł" sources="{Tytuly}" />
      <table path="Imiona" paddingLeft="70">
        <AutocompleteTextColumn label="Imię" sources="{Imiona}"/>
      </table>
      <AutocompleteTextField path="Nazwisko" sources="{Nazwiska}"/>
      <vbox>
        <IntegerField path="Wiek" width="50"/>
        <YearDateField path="Data urodzenia"/>
      </vbox>
      <AutocompleteTextField path="Status społeczny" sources="{Status}"/>
      <AutocompleteTextField path="Zawód" sources="{Zawod}"/>

      <hbox>
        <AutocompleteTextField label="Imię i nazwisko matki" path="Matka.Imię" sources="{Imiona}" width="100"/>
        <AutocompleteTextField label="" path="Matka.Nazwisko" sources="{Nazwiska}" width="100"/>
      </hbox>
      <AutocompleteTextField path="Rodzice matki" sources="{Imiona}"/>
      <AutocompleteTextField label="Status społeczny matki" path="Matka.Status społeczny" sources="{Status}" />
      <AutocompleteTextField label="Zawód matki" path="Matka.Zawód" sources="{Zawod}" />
      <hbox>
        <AutocompleteTextField label="Imię i nazwisko ojca" path="Ojciec.Imię" sources="{Imiona}" width="100" paddingLeft="7"/>
        <AutocompleteTextField label="" path="Ojciec.Nazwisko" sources="{Nazwiska}" width="100"/>
      </hbox>
      <AutocompleteTextField path="Rodzice ojca" sources="{Imiona}"/>
      <AutocompleteTextField label="Status społeczny ojca" path="Ojciec.Status społeczny" sources="{Status}" />
      <AutocompleteTextField label="Zawód ojca" path="Ojciec.Zawód" sources="{Zawod}" />
    </vbox>
    </enter>

    <vbox>
      <label>Akuszerka</label>
      <AutocompleteTextField path="Akuszerka.Imię"/>
      <AutocompleteTextField path="Akuszerka.Nazwisko"/>

      <label>Udzielający chrztu</label>
      <AutocompleteTextField path="Udzielający chrztu.Imię"/>
      <AutocompleteTextField path="Udzielający chrztu.Nazwisko"/>
      <ChoiceField path="Chrzest z wody" default="Nie"/>
      <AutocompleteTextField path="Wyznanie" sticky="true"/>

      <TextField path="Źródło" rows="3" width="300" sticky="true"/>
      <TextField path="Notatki" rows="3" width="300"/>
    </vbox>
  </hbox>
  <vbox>
    <label>Chrzestni</label>
    <table path="Chrzestni">
      <AutocompleteTextColumn path="Tytuł" sources="{Tytuly}" />
      <AutocompleteTextColumn path="Imię" sources="{Imiona}"/>
      <AutocompleteTextColumn path="Nazwisko" sources="{Nazwiska}"/>
      <AutocompleteTextColumn path="Małżonek" sources="Chrzestni.*.Małżonek"/>
      <ChoiceColumn path="Płeć"/>
      <ChoiceColumn path="Stan cywilny"/>
      <AutocompleteTextColumn path="Status społeczny" sources="{Status}"/>
      <AutocompleteTextColumn path="Zawód" sources="{Zawod}"/>
      <ChoiceColumn path="Czy małżeństwo" label="Małżeństwo" default="Nie"/>
      <ChoiceColumn path="Czy rodzeństwo" label="Rodzeństwo" default="Nie"/>
      <AutocompleteTextColumn path="Uwagi" sources="Chrzestni.*.Uwagi"/>
    </table>
  </vbox>
  <table path="Zdjęcia">
    <ImageColumn label="Zdjęcia"/>
  </table>
</vbox>
